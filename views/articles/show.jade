extends layout


block content
  .container
    .hero-unit
      h1 Article
      a.btn.btn-primary(href="/articles/new", role="button") New Article
      a.btn.btn-secondary(href="/articles", role="button") List of Articles
      hr
      table(class='table table-striped')
        tbody
          tr
            td Name
            td
              =article.name
          tr
            td Authors
            td
              =article.author
          tr
            td Keywords
            td
              =article.keyword
          tr
            td Content
            td
              !=article.inhalt
      a.btn.btn-primary(href="/articles/" + article.id + "/edit", role="button") Edit